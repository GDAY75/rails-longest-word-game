<h1>New Game</h1>
<ul class="d-flex">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>
<p>What is the longest word you can find?</p>
<form class="d-flex" action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form-control" type="text" name="word">
  <input class="btn" type="submit" value="Play">
</form>
